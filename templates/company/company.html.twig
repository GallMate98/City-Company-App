{% extends 'base.html.twig' %}

{% block body %}
<div class="flex justify-center items-center h-screen">
    <div class="text-center mx-auto my-auto">
        <div class="text-4xl mb-11">
            <h1 class="text-7xl font-bold">Data for {{ company.getNumeFirme }} company</h1>
        </div>
        <div class="bg-white p-4 flex flex-col gap-4 shadow-lg items-center">
            <ul class="mt-4 text-center">
                <li>
                    <div class="mx-auto">
                        <img src="{{ company.getLogo }}" onerror="this.src='{{ asset("images/defaultcompanylogo.jpg") }}'" alt="{{ company.getNumeFirme }}" width="100" height="100" class="mr-2">
                    </div>
                </li>
                <li class="text-2xl">Address: {{ company.getAdresa }}</li>
                <li class="text-2xl">Category: {{ company.getCategorie }}</li>
            </ul>
            <button class="mt-4 bg-blue-500 hover:bg-blue-700 text-blue-100 font-bold py-2 px-4 rounded" onclick="backToAllCompany()">Back</button>
        </div>
    </div>
</div>
<script>
    function backToAllCompany() {
        window.location.href = '/';
    }
</script>
{% endblock %}