{% extends 'base.html.twig' %}
{% block body %}
<div class="min-h-screen flex justify-center items-center bg-gray-800">
    <div class="w-1/3 max-w-md p-6 bg-white rounded-lg shadow-md text-center">
            <h1 class="text-3xl font-semibold mb-6 text-blue-600">{{title}}</h1>
            {{ form_start(form) }}
        <div class="border  border-black p-4 rounded-lg"> <!-- Form container with border -->
            <div class="mb-4">
                {{ form_label(form.numeFirme, 'Company Name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.numeFirme, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.adresa, 'Company Address:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.adresa, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.categorie, 'Category:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.logo, 'Logo:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.logo, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            </div>

            <div >
                {{ form_end(form, {'attr': {'class': 'bg-blue-500 border border-blue-700 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'}}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}